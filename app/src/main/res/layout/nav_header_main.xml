<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_foto_perfil_header"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/foto_de_perfil_padrao"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nome_usuario_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nome do UsuÃ¡rio"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="@+id/civ_foto_perfil_header"
        app:layout_constraintTop_toBottomOf="@+id/civ_foto_perfil_header" />

    <TextView
        android:id="@+id/tv_email_usuario_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="emaildousuario@email.com"
        app:layout_constraintStart_toStartOf="@+id/tv_nome_usuario_header"
        app:layout_constraintTop_toBottomOf="@+id/tv_nome_usuario_header" />

    <View
        android:id="@+id/view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="55dp"
        android:background="@drawable/bg_icon"
        app:layout_constraintBottom_toBottomOf="@+id/civ_foto_perfil_header"
        app:layout_constraintStart_toStartOf="@+id/civ_foto_perfil_header"
        app:layout_constraintTop_toTopOf="@+id/civ_foto_perfil_header" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="55dp"
        android:background="@drawable/ic_edit_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/civ_foto_perfil_header"
        app:layout_constraintStart_toStartOf="@+id/civ_foto_perfil_header"
        app:layout_constraintTop_toTopOf="@+id/civ_foto_perfil_header"
        app:layout_constraintVertical_bias="0.49" />

</android.support.constraint.ConstraintLayout>
